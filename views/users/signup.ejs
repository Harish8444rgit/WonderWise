<% -layout("/layouts/boilerplates.ejs")%>

<body>

  <div class="col-6 offset-2 mb-3 mt-3 "><h3>Signup on WonderWise</h3></div>
  <div class="row">
      <div class="col-8 offset-2">
       <br>

<form action="/signup" method="post" novalidate class="needs-validation">
  <div class="mb-3">
    <label for="username" claas="form-lable">Signup:</label>
    <input
      type="text"
      id="username"
      name="username"
      class="form-control"
      required
    />
    <div class="invalid-feedback">
      Looks Good!
    </div>
    </div>

    <div class="mb-3">
      <label for="Email" claas="form-lable">Email:</label>
      <input
        type="email"
        id="Email"
        name="email"
        class="form-control"
        required
      />
      </div>


  <div class="mb-3">
    <label for="Password" claas="form-lable">Password:</label>
    <input
      type="password"
      id="Password"
      name="password"
      class="form-control"
      required
    />
    </div>
  <br>
  <div class="mb-3"><button class=" btn btn-success ">signup</button></div> 
</form>
</div>
</div>
</body>